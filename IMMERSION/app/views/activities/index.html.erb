<p id="notice"><%= notice %></p>

<h1 class="center">Activities</h1>
<div class="container">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @activities.each do |activity| %>
        <tr>
          <td><%= activity.name %>&nbsp; &nbsp;</td>
          <td><%= link_to 'Show', activity %>&nbsp;</td>
          <td><%= link_to 'Edit', edit_activity_path(activity) %>&nbsp;</td>
          <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %>&nbsp;</td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Activity', new_activity_path, :class =>"btn btn-outline-secondary" %>
</div>
<br/> <br/>
<div class="center"><%= link_to 'Back',admin_root_path , :class => "btn btn-primary"%></div>
